%table
  %tr
    %th Student
    %th From
    %th To
  - for private_lesson in @private_lessons
    %tr{:class => cycle('even','odd')}
      %td= private_lesson.student.try(:full_name)
      %td= private_lesson.start_time.to_s(:short)
      %td= private_lesson.end_time.to_s(:short)
      %td
        = link_to 'Edit', edit_private_lesson_path(private_lesson)
        \|
        = link_to 'Delete', private_lesson, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Private Lesson", new_private_lesson_path

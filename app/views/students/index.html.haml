- title "Students"

%table
  %tr
    %th First Name
    %th Last Name
    %th Admin
    %th Editor
    %th State

  - for student in @students
    %tr{:class => cycle('even','odd')}
      %td= student.first_name
      %td= student.last_name
      %td= student.admin
      %td= student.editor
      %td= student.state
      - if student.promotable?
        %td= button_to "Promote", promote_student_path(student)
      - if student.demotable?
        %td= button_to "Demote", demote_student_path(student)
      %td= link_to "Edit", edit_student_path(student)

%p= link_to "New Student", new_student_path
